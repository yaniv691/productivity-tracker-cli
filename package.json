{
  "name": "productivity-tracker-cli",
  "version": "1.0.0",
  "description": "A comprehensive CLI tool for tracking productivity metrics and managing tasks",
  "main": "dist/cli.js",
  "bin": {
    "ptask": "dist/cli.js"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "build:tsc": "tsc --build --verbose",
    "test": "jest --verbose --coverage --detectOpenHandles",
    "test:watch": "jest --watch --verbose",
    "lint": "eslint src/**/*.ts tests/**/*.ts --max-warnings=0 --format=stylish",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "typecheck": "tsc --noEmit --pretty --listFiles",
    "prepack": "npm run build",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "clean": "rimraf dist coverage .nyc_output",
    "security": "npm audit --audit-level=high",
    "validate": "npm run lint && npm run typecheck && npm run test && npm run build"
  },
  "keywords": [
    "productivity",
    "task-management",
    "cli",
    "time-tracking",
    "typescript",
    "reporting"
  ],
  "author": "Productivity Team",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "inquirer": "^8.2.6",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "winston": "^3.11.0",
    "uuid": "^9.0.1",
    "fs-extra": "^11.1.1",
    "csv-writer": "^1.6.0",
    "json2csv": "^6.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.7",
    "@types/jest": "^29.5.7",
    "@types/lodash": "^4.14.200",
    "@types/uuid": "^9.0.6",
    "@types/fs-extra": "^11.0.3",
    "@types/inquirer": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/example/productivity-tracker-cli.git"
  },
  "bugs": {
    "url": "https://github.com/example/productivity-tracker-cli/issues"
  },
  "homepage": "https://github.com/example/productivity-tracker-cli#readme"
}